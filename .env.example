# Proxmox Dashboard Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# PROXMOX CONFIGURATION
# =============================================================================
# Your Proxmox VE server URL (include protocol and port)
PROXMOX_HOST=https://192.168.50.7:8006

# =============================================================================
# GUACAMOLE CONFIGURATION  
# =============================================================================
# Your Apache Guacamole server URL (include protocol and port)
GUACAMOLE_HOST=http://192.168.50.183:8080

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Disable SSL certificate verification for self-signed certificates
# WARNING: Only use this in development or with trusted self-signed certificates
NODE_TLS_REJECT_UNAUTHORIZED=0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Disable Next.js telemetry for privacy
NEXT_TELEMETRY_DISABLED=1

# Application environment (development/production)
NODE_ENV=development

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Custom port for development server (default: 3000)
# PORT=3000

# Custom hostname for development server (default: localhost)
# HOSTNAME=localhost

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Proxmox API timeout in milliseconds (default: 30000)
# PROXMOX_API_TIMEOUT=30000

# Dashboard auto-refresh interval in seconds (default: 30)
# DASHBOARD_REFRESH_INTERVAL=30

# Enable debug logging (true/false)
# DEBUG_LOGGING=false
